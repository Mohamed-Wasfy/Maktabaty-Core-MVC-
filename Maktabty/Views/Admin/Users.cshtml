						<th>Image</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model){
					<tr>
						<td>
							<span class="custom-checkbox">
								<input type="checkbox" id="checkbox1" name="options[]" value="1">
								<label for="checkbox1"></label>
							</span>
						</td>
						<td>@item.Name</td>
						<td> <img src="/Images/@item.Image" alt="" style="width:100px;height:50px;"></td>
					</tr>
					}
				</tbody>
			</table>
			
		</div>
	</div>        
</div>
