@model List<Book>
@{
    ViewData["Title"] = "FavList";
}

<h1>Favorits</h1>



<div class = "d-flex flex-row">
        @foreach (var item in Model)
        {
        <div class="card mr-5" style="width: 30rem;">
          <img src="~/Images/@item.Image" class="card-img-top" alt="..." style="height:70%">
           <div class="card-body">
           <h5 class="card-title">@item.Name</h5>
           <a href="~/Book/Details/@item.Id" class="btn" style ="background-color:#009970; color:white">view Book</a>
           <a href="/FavList/RemoveFromFav/@item.Id" class="btn"style ="background-color:#009970;color:white">delete Book</a>
           </div>
        </div>
       }
</div>

